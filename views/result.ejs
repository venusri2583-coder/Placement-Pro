<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center mb-5 text-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 animate__animated animate__zoomIn" style="border-radius: 30px; background: white;">
                <div class="card-body p-5">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 100px; height: 100px;">
                        <i class="fas fa-trophy fa-3x"></i>
                    </div>
                    <h2 class="fw-bold mb-1">Test Results</h2>
                    <p class="text-muted">Great effort, <%= user.username %>!</p>
                    
                    <hr class="my-4 opacity-25">
                    
                    <div class="row text-center mb-4">
                        <div class="col-6">
                            <h1 class="fw-bold text-success mb-0"><%= score %></h1>
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Marks Obtained</small>
                        </div>
                        <div class="col-6">
                            <h1 class="fw-bold text-dark mb-0"><%= total %></h1>
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Total Questions</small>
                        </div>
                    </div>

                    <% let percentage = (score / total) * 100; %>
                    <div class="progress mb-4" style="height: 12px; border-radius: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%"></div>
                    </div>
                    
                    <div class="badge rounded-pill <%= percentage >= 60 ? 'bg-success' : 'bg-warning text-dark' %> p-3 px-4 mb-4">
                        Accuracy: <%= percentage.toFixed(1) %>%
                    </div>

                    <div class="d-grid gap-2">
                        <a href="/mock-test" class="btn btn-primary rounded-pill py-2 fw-bold shadow-sm transition-hover">Try Another Test</a>
                        <a href="/" class="btn btn-outline-dark rounded-pill py-2 fw-bold">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <h4 class="fw-bold mb-4 text-dark"><i class="fas fa-search-location me-2 text-primary"></i> Detailed Solution Review</h4>
            
            <% if (typeof reviewData !== 'undefined' && reviewData.length > 0) { %>
                <% reviewData.forEach((item, index) => { %>
                    <div class="card mb-3 border-0 shadow-sm animate__animated animate__fadeInUp" 
                         style="border-radius: 20px; border-left: 8px solid <%= item.isCorrect ? '#28a745' : '#dc3545' %> !important; animation-delay: <%= index * 0.1 %>s;">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="fw-bold text-dark m-0">Question <%= index + 1 %>: <%= item.question %></h6>
                                <i class="fas <%= item.isCorrect ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %> fa-lg"></i>
                            </div>

                            <div class="mt-3">
                                <div class="small mb-2 p-2 rounded-pill px-3 <%= item.isCorrect ? 'bg-light text-success fw-bold' : 'bg-light text-danger fw-bold' %>" style="display: inline-block;">
                                    Your Choice: <%= item.userAnswer %>) <%= item.options[item.userAnswer] %>
                                </div>
                                
                                <% if (!item.isCorrect) { %>
                                    <br>
                                    <div class="small mb-2 p-2 rounded-pill px-3 bg-light text-success fw-bold" style="display: inline-block;">
                                        Correct Answer: <%= item.correctAnswer %>) <%= item.options[item.correctAnswer] %>
                                    </div>
                                <% } %>
                            </div>

                            <div class="bg-light p-3 rounded-3 mt-3 border-start border-3 border-primary" style="font-size: 0.9rem;">
                                <strong class="text-primary"><i class="far fa-lightbulb me-1"></i> Explanation:</strong>
                                <div class="mt-1 text-muted"><%= item.explanation %></div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center text-muted">Review data is unavailable. Please take the test again.</p>
            <% } %>
        </div>
    </div>
</div>

<style>
    .transition-hover:hover { transform: translateY(-3px); transition: 0.3s; box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
</style>

<%- include('partials/footer') %>